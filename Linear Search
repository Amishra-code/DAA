#include<iostream>
using namespace std;

void Linear_Search(int a[], int n, int key)
{
    int i=0, j=0;

    for(i=0; i<n; i++)
    {
        if(a[i]==key)
        {
            cout<<"Element found at position : " << i << endl;
            break;
        }
    }

    if(i>=n)
    {
        cout<<"Element not found!!" << endl;
    }
}

int main()
{
    int n, i=0, key; 

    cout<<"Enter array limit : ";
    cin>>n;

    int a[n];

    cout<<"Enter array elements : ";
    for(i=0; i<n; i++)
    {
        cout<<"\nEnter " << i << " element : "; 
        cin>>a[i];
    }

    cout<<"\n\nEnter the key which yiu want to search : ";
    cin>>key;

    Linear_Search(a, n, key);

    return 0;
}
